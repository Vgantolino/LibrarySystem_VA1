@using LibrarySystem_VA.Web.Models.Authors;
@model AuthorListViewModel

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Authors/Index.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 style="font-family:Helvetica, sans-serif"><b>@L("Authors")</b></h1>
            </div>

            <div class="col-sm-6">
                <a class="btn float-sm-right" asp-controller="Authors" asp-action="CreateOrEdit"
                   style="border-radius:15px; border-color:#027BCE; background:#027BCE; color:#fff; font-size:16px; font-weight:500; text-transform:uppercase">
                    <i class="fa fa-plus-square"></i> @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    @*Search*@
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-3">
                                    <form id="searchAuthorForm" class="form-horizontal">
                                        <div class="input-group">
                                            <input type="text" name="Keyword" class="form-control txt-search" />
                                                <div class="input-group-append">
                                                    <button class="btn btn-secondary btn-search search-button" type="button" style="color:#fff; border-color:#061826; background:#061826">
                                                        <i class="fa fa-search"></i>
                                                    </button>
                                                </div>                                                                          
                                        </div>
                                    </form>
                            </div>
                        </div>
                    </div>

                    @*Table*@
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="AuthorsTable" class="table table-bordered table-hover" style="font-size:0.9em; font-family:Helvetica, sans-serif;">
                                <thead style="background-color:#E7ECEF">
                                    <tr>
                                        <th style="text-align:center">@L("AuthorID")</th>
                                        <th style="text-align:center">@L("AuthorName")</th>
                                        <th style="width: 150px; text-align:center">@L("Actions")</th>
                                    </tr>
                                </thead>
                                    <tbody><tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
