@using LibrarySystem_VA.Web.Models.Authors;
@model AuthorListViewModel


@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Authors/Index.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Authors")</h1>
            </div>
            <div class="col-sm-6">
                <a class="btn bg-blue float-sm-right" asp-controller="Authors" asp-action="CreateOrEdit">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    @*Search*@
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="abp-advanced-search">
                                    <form name="searchAuthorsForm" class="form-horizontal" asp-controller="Authors" asp-action="Index" method="get">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <button type="submit" class="btn bg-blue btn-search search-button">
                                                    <span class="fas fa-search" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                            <input class="form-control" type="text" name="searchAuthors" placeholder="Search" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*Table*@
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="AuthorsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>@L("AuthorID")</th>                                        
                                        <th>@L("AuthorName")</th>                                        
                                        <th style="width: 180px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                    <tbody>
                                        @foreach (var Author in Model.Authors)
                                        {
                                            <tr>
                                                <td>@Author?.Id</td>
                                                <td>@Author?.Name</td>
                                                <td>
                                                    <button type="button" class="btn btn-sm bg-secondary edit-author" data-author-id="@Author?.Id">
                                                        <i class="fas fa-pencil-alt"></i> Edit
                                                    </button>

                                                <button type="button" class="btn btn-sm bg-danger delete-author" data-author-id="@Author?.Id" data-author-name="@Author.Name">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    <tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
