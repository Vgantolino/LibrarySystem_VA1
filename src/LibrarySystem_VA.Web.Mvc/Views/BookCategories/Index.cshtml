@using LibrarySystem_VA.Web.Models.BookCategories;
@model BookCategoryListViewModel

@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/BookCategories/Index.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("BookCategories")</h1>
            </div>
            <div class="col-sm-6">
                <a class="btn bg-blue float-sm-right" asp-controller="BookCategories" asp-action="CreateOrEdit">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    
                    @*Search*@
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="abp-advanced-search">
                                    <form name="searchBookCategoryForm" class="form-horizontal" asp-controller="BookCategories" asp-action="Index" method="get">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <button type="submit" class="btn bg-blue btn-search search-button">
                                                    <span class="fas fa-search" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                            <input class="form-control" type="text" name="searchBookCategory" placeholder="Search" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*Table*@
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="BookCategoryTable" class="table table-striped table-bordered">
                                <thead>
                                        <tr>
                                            <th>@L("BookCategoryId")</th>
                                            <th>@L("BookCategoryName")</th>
                                            <th>@L("DeptName")</th>
                                            <th style="width: 180px">@L("Actions")</th>
                                        </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bookCategory in Model.BookCategories)
                                    {
                                        <tr>
                                            <td>@bookCategory?.Id</td>
                                            <td>@bookCategory?.Name</td>
                                            <td>@bookCategory.Department?.Name</td>
                                            <td>
                                                <button type="button" class="btn btn-sm bg-secondary edit-bookCategory" data-bookCategory-id="@bookCategory?.Id">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>

                                                <button type="button" class="btn btn-sm bg-danger delete-bookCategory" data-bookCategory-id="@bookCategory?.Id" data-bookCategory-name="@bookCategory.Name">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
