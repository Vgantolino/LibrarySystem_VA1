@using LibrarySystem_VA.Web.Models.Borrowers;
@model BorrowerListViewModel

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Borrowers/Index.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 style="font-family:Helvetica, sans-serif"><b>@L("Borrowers")</b></h1>
            </div>
            <div class="col-sm-6">
                <a class="btn float-sm-right" asp-controller="Borrowers" asp-action="CreateOrEdit"
                   style="border-radius:15px; border-color:#027BCE; background:#027BCE; color:#fff; font-size:16px; font-weight:500; text-transform:uppercase">
                <i class="fa fa-plus-square"></i> @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    @*Search*@
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-3">
                                <form name="searchBorrowerForm" asp-controller="Borrowers" asp-action="Index" method="get">
                                    <div class="input-group">
                                        <input class="form-control" type="text" name="searchBorrower" placeholder="Search" />
                                            <div class="input-group-append">
                                                <button type="submit" class="btn btn-secondary btn-search search-button" style="color:#fff; border-color:#061826; background:#061826">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </div>                                        
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    @*Table*@
                    <div class="card-body">
                        @*<div class="table-responsive">*@
                            <table id="BorrowersTable" class="table table-bordered table-hover" style="font-size:0.9em; font-family:Helvetica, sans-serif">
                                <thead style="background-color:#E7ECEF">
                                    <tr>
                                        <th style="width:120px; border:1px solid #252627; text-align:center">@L("BorrowDate")</th>
                                        <th style="width:190px; border:1px solid #252627; text-align:center">@L("ExpectedReturnDate")</th>
                                        <th style="width:120px; border:1px solid #252627; text-align:center">@L("ReturnDate")</th>
                                        <th style="width:280px; border:1px solid #252627; text-align:center">@L("BookTitle")</th>
                                        <th style="width:280px; border:1px solid #252627; text-align:center">@L("StudentName")</th>
                                        <th style="width: 160px; border:1px solid #252627; text-align:center">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var borrower in Model?.Borrowers)
                                    {
                                        <tr>
                                            @if (borrower.ReturnDate > borrower.ExpectedReturnDate)
                                            {
                                                <td style="background-color:#EC7272; border:1px solid #252627; text-align:center">@borrower?.BorrowDate.ToString("yyyy-MM-dd")</td>
                                                <td style="background-color:#EC7272; border:1px solid #252627; text-align:center">@borrower?.ExpectedReturnDate.ToString("yyyy-MM-dd")</td>
                                                <td style="background-color:#EC7272; border:1px solid #252627; text-align:center">@borrower.ReturnDate?.ToString("yyyy-MM-dd")</td>
                                                <td style="background-color:#EC7272; border:1px solid #252627">@borrower.Book?.BookTitle</td>
                                                <td style="background-color:#EC7272; border:1px solid #252627">@borrower.Student?.StudentName</td>
                                            }
                                            else
                                            {
                                                <td style="border:1px solid #252627; text-align:center">@borrower?.BorrowDate.ToString("yyyy-MM-dd")</td>
                                                <td style="border:1px solid #252627; text-align:center">@borrower?.ExpectedReturnDate.ToString("yyyy-MM-dd")</td>
                                                <td style="border:1px solid #252627; text-align:center">@borrower.ReturnDate?.ToString("yyyy-MM-dd")</td>
                                                <td style="border:1px solid #252627">@borrower.Book?.BookTitle</td>
                                                <td style="border:1px solid #252627">@borrower.Student?.StudentName</td>
                                            }
                                            <td style="border:1px solid #252627">
                                                @if (borrower.ReturnDate.HasValue)
                                                {
                                                    @*EDIT BUTTON*@
                                                    <button type="button" disabled class="btn btn-sm edit-borrower" data-borrower-id="@borrower?.Id"
                                                            style="border-radius:10px; border-color:#3E6680; background:#3E6680; color:#fff;">
                                                        <i class="fas fa-pencil-alt"></i> Edit
                                                    </button>

                                                    @*DELETE BUTTON*@
                                                    <button type="button" disabled class="btn btn-sm delete-borrower" data-borrower-id="@borrower?.Id"data-borrower-name="@borrower.Student?.StudentName"
                                                            style="border-radius:10px; border-color:#D16666; background:#D16666; color:#fff;">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                }
                                                else
                                                {
                                                    @*EDIT BUTTON*@
                                                    <button type="button" class="btn btn-sm edit-borrower" data-borrower-id="@borrower?.Id"
                                                            style="border-radius:10px; border-color:#3E6680; background:#3E6680; color:#fff;">
                                                        <i class="fas fa-pencil-alt"></i> Edit
                                                    </button>

                                                    @*DELETE BUTTON*@
                                                    <button type="button" class="btn btn-sm delete-borrower" data-borrower-id="@borrower?.Id" data-borrower-name="@borrower.Student?.StudentName"
                                                            style="border-radius:10px; border-color:#D16666; background:#D16666; color:#fff;">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        @*</div>*@
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>