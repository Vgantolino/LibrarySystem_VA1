@using LibrarySystem_VA.Web.Models.Departments;
@model DepartmentListViewModel

@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Departments/Index.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 style="font-family:Helvetica, sans-serif"><b>@L("Departments")</b></h1>
            </div>
            <div class="col-sm-6">
                <a style="border-radius:15px; border-color:#027BCE; background:#027BCE; color:#fff; font-size:16px;
                          font-weight:500; text-transform:uppercase"
                   class="btn float-sm-right" asp-controller="Departments" asp-action="CreateOrEdit">
                    <i class="fa fa-plus-square"></i> @L("Create") </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                   
                    @*Search*@
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-3">
                                <form name="searchDeptForm" class="form-horizontal" asp-controller="Departments" asp-action="Index" method="get">
                                    <div class="input-group">
                                        <input type="text" class="form-control txt-search" name="SearchDept" placeholder="Search" />
                                            <div class="input-group-append">
                                                <button class="btn btn-secondary btn-search search-button" type="submit" style="color:#fff; border-color:#061826; background:#061826">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    @*Table*@
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="DepartmentTable" class="table table-striped table-hover" style="font-size:0.9em; font-family:Helvetica, sans-serif;">
                                <thead style="background-color:#C1CAD6">
                                        <tr">                                 
                                            <th style="width:160px">@L("DeptID")</th>
                                            <th style="width:250px">@L("DeptName")</th>
                                            <th style="width: 20px">@L("Actions")</th>
                                        </tr>
                                </thead>
                                <tbody>
                                    @foreach (var department in Model.Departments)
                                    {
                                        <tr>
                                            <td>@department?.Id</td>
                                            <td>@department?.Name</td>
                                            <td>
                                                <button type="button" class="btn btn-sm edit-dept" data-dept-id="@department?.Id"
                                                        style="border-radius:10px; border-color:#3E6680; background:#3E6680; color:#fff;">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>

                                                <button type="button" class="btn btn-sm delete-dept" data-dept-id="@department?.Id" data-dept-name="@department.Name"
                                                        style="border-radius:10px; border-color:#D16666; background:#D16666; color:#fff;">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>