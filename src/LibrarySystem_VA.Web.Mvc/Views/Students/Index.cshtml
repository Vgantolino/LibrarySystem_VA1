@using LibrarySystem_VA.Web.Models.Students;
@model StudentListViewModel

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Students/Index.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 style="font-family:Helvetica, sans-serif"><b>@L("Students")</b></h1>
            </div>
            <div class="col-sm-6">
                <a style="border-radius:15px; border-color:#027BCE; background:#027BCE; color:#fff; font-size:16px; font-weight:500; text-transform:uppercase"
                   class="btn float-sm-right" asp-controller="Students" asp-action="CreateOrEdit">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    
                    @*Search*@
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-3">
                                <form name="searchStudentForm" class="form-horizontal" asp-controller="Students" asp-action="Index" method="get">
                                    <div class="input-group">
                                        <input type="text" class="form-control txt-search" name="searchStudent" placeholder="Search" />
                                            <div class="input-group-append">
                                                <button class="btn btn-secondary btn-search search-button" type="submit" style="color:#fff; border-color:#061826; background:#061826">
                                                    <i class="fa fa-search"></i>
                                                </button>   
                                            </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    @*Table*@
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="StudentTable" class="table table-striped table-hover" style="font-size:0.9em; font-family:Helvetica, sans-serif;">
                                <thead style="background-color:#C1CAD6">
                                        <tr>
                                            <th>@L("StudentID")</th>
                                            <th>@L("StudentName")</th>
                                            <th>@L("StudentContactNumber")</th>
                                            <th>@L("StudentEmail")</th>
                                            <th>@L("DeptName")</th>
                                            <th style="width: 180px">@L("Actions")</th>
                                        </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@student?.Id</td>
                                            <td>@student?.StudentName</td>
                                            <td>@student?.StudentContactNumber</td>
                                            <td>@student?.StudentEmail</td>
                                            <td>@student.Department?.Name</td>
                                            <td>
                                                <button type="button" class="btn btn-sm edit-student" data-student-id="@student?.Id"
                                                        style="border-radius:10px; border-color:#3E6680; background:#3E6680; color:#fff;">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>

                                                <button type="button" class="btn btn-sm delete-student" data-student-id="@student?.Id" data-student-name="@student.StudentName"
                                                        style="border-radius:10px; border-color:#D16666; background:#D16666; color:#fff;">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

